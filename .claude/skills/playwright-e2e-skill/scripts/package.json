{
  "name": "@eventos/playwright-e2e-skill",
  "version": "1.0.0",
  "description": "Playwright E2E testing skill for EventOS",
  "main": "index.js",
  "scripts": {
    "test": "echo 'Running all tests...' && npm run test:smoke && npm run test:auth && npm run test:wizard",
    "test:smoke": "echo 'Running smoke tests...' && playwright-skill-runner --playbook playbooks/SMOKE.txt",
    "test:auth": "echo 'Running auth tests...' && playwright-skill-runner --playbook playbooks/AUTH.txt",
    "test:wizard": "echo 'Running wizard tests...' && playwright-skill-runner --playbook playbooks/PITCH_DECK_WIZARD.txt",
    "test:all": "npm run test:smoke && npm run test:auth && npm run test:wizard",
    "test:quick": "npm run test:smoke",
    "test:headed": "PLAYWRIGHT_HEADLESS=false npm run test",
    "test:firefox": "PLAYWRIGHT_BROWSER=firefox npm run test",
    "test:webkit": "PLAYWRIGHT_BROWSER=webkit npm run test",
    "test:multi-browser": "npm run test && npm run test:firefox && npm run test:webkit",
    "test:responsive": "playwright-skill-runner --responsive --viewports mobile,tablet,desktop",
    "test:ci": "PLAYWRIGHT_HEADLESS=true npm run test:smoke",
    "install:playwright": "npx @playwright/mcp install",
    "update:playwright": "npm install @playwright/mcp@latest",
    "clean": "rm -rf test-results screenshots network-logs",
    "report": "playwright-skill-runner --generate-report",
    "lint": "eslint resources/**/*.ts",
    "format": "prettier --write resources/**/*.ts playbooks/**/*.txt"
  },
  "keywords": [
    "playwright",
    "e2e",
    "testing",
    "automation",
    "browser",
    "mcp",
    "claude",
    "skill"
  ],
  "author": "EventOS Team",
  "license": "MIT",
  "dependencies": {
    "@playwright/mcp": "^0.0.43"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eventos/playwright-e2e-skill"
  },
  "bugs": {
    "url": "https://github.com/eventos/playwright-e2e-skill/issues"
  },
  "homepage": "https://github.com/eventos/playwright-e2e-skill#readme",
  "directories": {
    "test": "playbooks",
    "doc": "resources"
  },
  "config": {
    "playwright_browser": "chromium",
    "playwright_headless": "true",
    "playwright_timeout": "30000"
  }
}
